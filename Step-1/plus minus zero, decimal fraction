void plusMinus(vector<int> arr) {

int n = arr.size();
int negative = 0, positive = 0, zero = 0;
for(int i=0; i<n; i++){
    if(arr[i] < 0) negative++;
    else if(arr[i] > 0) positive++;
    else zero++;
    
    
}
    float negativeRatio =static_cast<float>(negative)/n ;
    float positiveRatio = static_cast<float>(positive)/n ;
    float zeroRatio = static_cast<float>(zero)/n ;
    cout<<setprecision(6);
    cout<<positiveRatio<<endl;
    cout<<negativeRatio<<endl;
    cout<<zeroRatio;
}
